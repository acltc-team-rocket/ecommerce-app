  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <ul class="info-background">
        <li>Order #: <%= @order.id %></li>
        <li>Ordered At: <%= human_date_and_time(@order.created_at) %></li>
        <li>Product Name: <%= @order.product.name %></li>
        <li>Quantity: <%= @order.quantity %></li>
        <li>Subtotal: <%= number_to_currency(@order.subtotal) %></li>
        <li>Tax: <%= number_to_currency(@order.tax) %></li>
        <li>Total: <%= number_to_currency(@order.total) %></li>
        <li>Ordered By: <%= @order.user.name %></li>
        <li>Email: <%= @order.user.email %></li>
       
      </ul>
     
    </div>
    <div class="col-md-4">
      <img src="<%= @order.product.images.first.url %>">
    </div>
  </div>