<h1>Mark's Super Sketchy Store</h1>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4">
      <a href="/products/<%= product.id %>">
        <img src="<%= product.image %>" width="200" height="200">
        <p><%= product.name %></p>
        <p><%= product.price %></p>
      </a>
    </div>
  <% end %>
</div>
